  "devDependencies": {
    "@babel/core": "^7.10.3",
    "babel-plugin-module-resolver": "4.0.0",
    "prettier": "^2.0.5",
    "tsconfig-paths": "3.9.0"
  },
  "repository": {
    "type": "git",
    "url": ""
